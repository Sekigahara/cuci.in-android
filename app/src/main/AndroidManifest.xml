<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cuciin_android">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_apps_icon_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_apps_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:hardwareAccelerated="false">

        <activity android:name=".activity.modul.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.modul.landing.LandingActivity" />
        <activity android:name=".activity.modul.login.LoginActivity" />
        <activity android:name=".activity.modul.register.RegisterActivity" />
        <activity android:name=".activity.modul.dashboard.DashboardActivity" />
        <activity android:name=".activity.modul.nearby.NearbyActivity" />
        <activity android:name=".activity.modul.orderList.OrderListActivity" />
        <activity android:name=".activity.modul.order.OrderActivity" />
        <activity android:name=".activity.modul.about_us.AboutUsActivity" />
        <activity android:name=".activity.modul.detail_transaction.DetailActivity" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>